<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnSurface">@color/red</item>
        <item name="colorError">@color/red</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>
    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/red</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyBottomNavigation">
        <item name="android:background">@color/black</item>
        <item name="itemBackground">@color/bottom_navigation_bg</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="btnColorSecondary">
        <item name="android:background">@color/black</item>
    </style>


</resources>

