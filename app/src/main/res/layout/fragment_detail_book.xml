<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragments.DetailBookFragment">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/block_pun"
        android:layout_width="100dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_btn"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/block_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_img">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"

            android:background="@drawable/star_half" />

        <TextView
            android:id="@+id/PunDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="7/10"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/block_time"
        android:layout_width="100dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_btn"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:orientation="horizontal"


        app:layout_constraintStart_toEndOf="@+id/block_pun"
        app:layout_constraintEnd_toStartOf="@+id/block_goal"
        app:layout_constraintTop_toBottomOf="@+id/detail_img">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:background="@drawable/clock" />

        <TextView
            android:id="@+id/DurDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="12 min"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block_goal"
        android:layout_width="120dp"

        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_btn"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/block_time"
        app:layout_constraintTop_toBottomOf="@+id/detail_img">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"

            android:background="@drawable/menu_book" />

        <TextView
            android:id="@+id/GoalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="mystery"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView

        android:id="@+id/titleDetail"
        android:layout_width="wrap_content"
        android:text="book 1 by H.P. Lovecraft "
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/block_goal"
        />

    <TextView
        android:id="@+id/descDetail"
        android:layout_width="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut blandit tellus a urna dictum, et iaculisrisus placerat. "
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleDetail"
    />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_btn"
        android:fontFamily="@font/source_sans_pro"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"

        android:text="@string/detail_btn"
        app:layout_constraintBottom_toTopOf="@id/btn_del"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descDetail" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_btn"
        android:fontFamily="@font/source_sans_pro"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:visibility="gone"
        android:text="Quiero borrar el libro"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descDetail" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_act"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/edit"
            tools:ignore="SpeakableTextPresentCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>