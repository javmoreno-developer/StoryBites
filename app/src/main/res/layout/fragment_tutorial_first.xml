<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragments.TutorialFirstFragment">

   <TextView
       android:id="@+id/tut_first_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/tut_first_title"
       android:textColor="@color/white"
       android:textSize="40sp"
       android:layout_marginTop="70dp"
       android:fontFamily="@font/pango"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />

   <TextView
       android:layout_width="350dp"
       android:layout_height="wrap_content"
       android:text="@string/tut_first_msg"
       android:textColor="@color/white"
       android:textSize="20sp"
       android:layout_marginTop="100dp"
       android:fontFamily="@font/source_sans_pro"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tut_first_title"

       />



</androidx.constraintlayout.widget.ConstraintLayout>